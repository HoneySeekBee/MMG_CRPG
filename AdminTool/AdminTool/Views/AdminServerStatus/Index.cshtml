@model AdminServerStatusVm
 
@{
    ViewData["Title"] = "서버 상태";
}

<h2 class="mt-3 mb-4">서버 상태 모니터링</h2>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>Server ID</th>
            <th>Status</th>
            <th>Region</th>
            <th>Version</th>
            <th>Online Users</th>
            <th>Requests/sec</th>
            <th>Last Updated</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Servers.Any())
        {
            <tr>
                <td colspan="8" class="text-center text-muted py-4">
                    서버가 등록되지 않았습니다.
                </td>
            </tr>
        }
        else
        {
            foreach (var s in Model.Servers)
            {
                <tr>
                    <td>@s.ServerId</td>

                    <td>
                        @if (s.Alive)
                        {
                            <span class="badge bg-success">Online</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Offline</span>
                        }
                    </td>
                    <td>@(s.Status?.Region ?? "-")</td>
                    <td>@(s.Status?.Version ?? "-")</td>
                    <td>@(s.Status?.OnlineUsers ?? 0)</td>
                    <td>@(s.Status?.RequestsPerSec ?? 0)</td>

                    <td>
                        @((s.LastUpdated > 0
                            ? DateTimeOffset.FromUnixTimeSeconds(s.LastUpdated).ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")
                            : "-"))
                    </td>
                    <td>
                        <a asp-controller="AdminServerStatus"
                           asp-action="Detail"
                           asp-route-serverId="@s.ServerId"
                           class="btn btn-sm btn-primary">
                            상세
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
