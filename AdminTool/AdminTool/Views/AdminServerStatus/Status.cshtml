@model AdminServerStatusVm

<h2 class="mt-3 mb-4">서버 상태 모니터링</h2>

<div id="refreshInfo" class="text-muted small">
    자동 새로고침: 5초 후
</div>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>Server ID</th>
            <th>Alive</th>
            <th>Region</th>
            <th>Version</th>
            <th>Online Users</th>
            <th>Requests/sec</th>
            <th>Last Update</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model.Servers)
        {
            <tr>
                <td>@s.ServerId</td>

                <td>
                    @if (s.Alive)
                    {
                        <span class="badge bg-success">Online</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Offline</span>
                    }
                </td>
                 
                <td>@s.Status?.Version</td>
                <td>@s.Status?.OnlineUsers</td> 

                <td>
                    @DateTimeOffset.FromUnixTimeMilliseconds(s.LastUpdated)
                    .ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")
                </td>

                <td>
                    <a asp-controller="AdminServerStatus"
                       asp-action="Detail"
                       asp-route-serverId="@s.ServerId"
                       class="btn btn-primary btn-sm">상세</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        let sec = 5;
        setInterval(() => {
            sec--;
            document.getElementById('refreshInfo').innerText = `자동 새로고침: ${sec}초 후`;

            if (sec <= 0) location.reload();
        }, 1000);
    </script>
} 