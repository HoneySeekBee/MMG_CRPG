@model GachaBannerIndexVm
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Gacha Banners";
    string qs(string key, object? val)
    {
        var dict = new Dictionary<string, string?>
                {
                    ["keyword"] = Model.Filter.Keyword,
                    ["skip"] = Model.Skip.ToString(),
                    ["take"] = Model.Take.ToString()
                };
        dict[key] = val?.ToString();
        var q = string.Join("&", dict.Where(kv => !string.IsNullOrEmpty(kv.Value)).Select(kv => $"{kv.Key}={Uri.EscapeDataString(kv.Value!)}"));
        return "?" + q;
    }
}

<div class="container py-3">
    <h2 class="mb-3">Gacha Banners</h2>

    @* Toast *@
    @if (TempData["Toast"] is string toast && !string.IsNullOrWhiteSpace(toast))
    {
        <div class="alert alert-success">@toast</div>
    }

    <div class="d-flex justify-content-between align-items-center mb-3">
        <form asp-action="Index" method="get" class="d-flex gap-2">
            <input type="text" name="Keyword" value="@Model.Filter.Keyword" class="form-control" placeholder="검색어 (key, title)" />
            <input type="hidden" name="Skip" value="0" />
            <input type="hidden" name="Take" value="@Model.Take" />
            <button type="submit" class="btn btn-primary">검색</button>
            <a asp-action="Index" class="btn btn-outline-secondary">초기화</a>
        </form>

        <a asp-action="Create" class="btn btn-success">+ 새 배너</a>
    </div>

    <div class="table-responsive">
        <table class="table table-sm table-striped align-middle">
            <thead class="table-light">
                <tr>
                    <th style="width:80px;">ID</th>
                    <th>Key</th>
                    <th>Title</th>
                    <th style="width:90px;">Pool</th>
                    <th style="width:90px;">Priority</th>
                    <th style="width:120px;">Status</th>
                    <th style="width:90px;">Active</th>
                    <th style="width:160px;">Starts</th>
                    <th style="width:160px;">Ends</th>
                    <th style="width:80px;">Live</th>
                    <th style="width:160px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Items.Count == 0)
                {
                    <tr>
                        <td colspan="11" class="text-center text-muted py-4">데이터가 없습니다.</td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td><code>@item.Key</code></td>
                            <td>
                                <div class="fw-semibold">@item.Title</div>
                                @if (!string.IsNullOrWhiteSpace(item.Subtitle))
                                {
                                    <div class="text-muted small">@item.Subtitle</div>
                                }
                            </td>
                            <td>#@item.GachaPoolId</td>
                            <td>@item.Priority</td>
                            <td>
                                @switch (item.Status)
                                {
                                    case Domain.Enum.GachaBannerStatus.Live:
                                        @:<span class="badge bg-success">Live</span>
                                        break;
                                    case Domain.Enum.GachaBannerStatus.Scheduled:
                                        @:<span class="badge bg-info text-dark">Scheduled</span>
                                        break;
                                    case Domain.Enum.GachaBannerStatus.Paused:
                                        @:<span class="badge bg-warning text-dark">Paused</span>
                                        break;
                                    case Domain.Enum.GachaBannerStatus.Archived:
                                        @:<span class="badge bg-secondary">Archived</span>
                                        break;
                                    default:
                                        @:<span class="badge bg-light text-dark">Draft</span>
                                        break;
                                }
                            </td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge bg-primary">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-outline-secondary border">Inactive</span>
                                }
                            </td>
                            <td>@item.StartsAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@(item.EndsAt.HasValue ? item.EndsAt.Value.ToLocalTime().ToString("yyyy-MM-dd HH:mm") : "-")</td>
                            <td>
                                @if (item.IsLiveNow)
                                {
                                    <span class="badge bg-success">YES</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">NO</span>
                                }
                            </td>
                            <td class="text-nowrap">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>

                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline"
                                      onsubmit="return confirm('정말 삭제할까요?');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                    @Html.AntiForgeryToken()
                                </form>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    @* Pagination *@
    @{
        var from = Model.Total == 0 ? 0 : Model.Skip + 1;
        var to = Math.Min(Model.Skip + Model.Take, Model.Total);
        var prevSkip = Math.Max(0, Model.Skip - Model.Take);
        var nextSkip = (Model.Skip + Model.Take < Model.Total) ? Model.Skip + Model.Take : Model.Skip;
        var hasPrev = Model.Skip > 0;
        var hasNext = Model.Skip + Model.Take < Model.Total;
    }
    <div class="d-flex justify-content-between align-items-center">
        <div class="text-muted">Showing @from–@to of @Model.Total</div>
        <div class="btn-group">
            <a class="btn btn-outline-secondary @(hasPrev ? "" : "disabled")"
               href="@(hasPrev ? Url.Action("Index") + qs("Skip", prevSkip) : "#")">« Prev</a>
            <a class="btn btn-outline-secondary @(hasNext ? "" : "disabled")"
               href="@(hasNext ? Url.Action("Index") + qs("Skip", nextSkip) : "#")">Next »</a>
        </div>
    </div>
</div>
