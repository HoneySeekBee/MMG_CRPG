@using AdminTool.Models
@model IEnumerable<AdminTool.Models.IconVm>

<h2>Icons</h2>

<div class="table-scroll">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Key</th>
                <th>Image</th>
                <th>Version</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var icon in Model)
            {
                <tr>
                    <td>@icon.Key</td>
                    <td><img src="@icon.Url" alt="@icon.Key" style="max-width:32px;max-height:32px;" /></td>
                    <td>@icon.Version</td>
                    <td>
                        <a asp-controller="Icons" asp-action="Edit" asp-route-id="@icon.IconId">Edit</a> |
                        <a asp-controller="Icons" asp-action="Details" asp-route-id="@icon.IconId">Details</a> |
                        <a asp-controller="Icons" asp-action="Delete" asp-route-id="@icon.IconId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
