@using AdminTool.Models
@model IEnumerable<AdminTool.Models.IconVm>

<h2>Icons</h2>

<div class="table-scroll">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Key</th>
                <th>Image</th>
                <th>Version</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var icon in Model)
            {
                <tr>
                    <td>@icon.Key</td>
                    <td><img src="@icon.Url" alt="@icon.Key" style="max-width:32px;max-height:32px;" /></td>
                    <td>@icon.Version</td>
                    <td>
                        <a asp-controller="Icons" asp-action="Edit" asp-route-id="@icon.IconId">Edit</a> |
                        <form asp-action="Delete" asp-route-id="@icon.IconId" method="post" class="d-inline">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-sm btn-danger"
            onclick="return confirm('정말 삭제할까요?');">
        Delete
    </button>
</form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
<a asp-controller="Icons" asp-action="Create" class="btn btn-primary mt-3">Create</a>
</div>
