@model AdminTool.Models.MonsterStatVm

@{
    ViewData["Title"] = "스탯 수정";
}

<h2>스탯 수정</h2>

<form asp-action="StatEdit" method="post">
    <input type="hidden" asp-for="MonsterId" />
    <input type="hidden" asp-for="Level" />

    <div class="row g-3">
        <div class="col-12 col-md-3">
            <label class="form-label">단계</label>
            <input class="form-control" value="@Model.Level" readonly />
        </div>

        <div class="col-12 col-md-3">
            <label asp-for="HP" class="form-label"></label>
            <input asp-for="HP" class="form-control" type="number" min="0" />
            <span asp-validation-for="HP" class="text-danger"></span>
        </div>

        <div class="col-12 col-md-3">
            <label asp-for="ATK" class="form-label"></label>
            <input asp-for="ATK" class="form-control" type="number" min="0" />
            <span asp-validation-for="ATK" class="text-danger"></span>
        </div>

        <div class="col-12 col-md-3">
            <label asp-for="DEF" class="form-label"></label>
            <input asp-for="DEF" class="form-control" type="number" min="0" />
            <span asp-validation-for="DEF" class="text-danger"></span>
        </div>

        <div class="col-12 col-md-3">
            <label asp-for="SPD" class="form-label"></label>
            <input asp-for="SPD" class="form-control" type="number" min="0" />
            <span asp-validation-for="SPD" class="text-danger"></span>
        </div>

        <div class="col-12 col-md-3">
            <label asp-for="CritRate" class="form-label"></label>
            <div class="input-group">
                <input asp-for="CritRate" class="form-control" type="number" step="0.01" min="0" />
                <span class="input-group-text">%</span>
            </div>
            <span asp-validation-for="CritRate" class="text-danger"></span>
        </div>

        <div class="col-12 col-md-3">
            <label asp-for="CritDamage" class="form-label"></label>
            <div class="input-group">
                <input asp-for="CritDamage" class="form-control" type="number" step="0.01" min="0" />
                <span class="input-group-text">%</span>
            </div>
            <span asp-validation-for="CritDamage" class="text-danger"></span>
        </div>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary">저장</button>
        <a asp-action="Detail" asp-route-id="@Model.MonsterId" class="btn btn-secondary">취소</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
