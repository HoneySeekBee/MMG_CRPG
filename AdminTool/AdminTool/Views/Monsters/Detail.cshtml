@model AdminTool.Models.MonsterDetailVm

@{
    ViewData["Title"] = $"{Model.Name} 상세";
}

<h2>@Model.Name 상세</h2>

<div class="card mb-4">
    <div class="card-body">
        <div class="row">
            <div class="col-md-3">
                @if (!string.IsNullOrEmpty(Model.PortraitUrl))
                {
                    <img src="@Model.PortraitUrl" class="img-fluid rounded shadow-sm" alt="@Model.Name" />
                }
                else
                {
                    <div class="text-muted">초상화 없음</div>
                }
            </div>
            <div class="col-md-9">
                <dl class="row">
                    <dt class="col-sm-3">ID</dt>
                    <dd class="col-sm-9">@Model.Id</dd>

                    <dt class="col-sm-3">모델 키</dt>
                    <dd class="col-sm-9">@Model.ModelKey</dd>

                    <dt class="col-sm-3">속성 ID</dt>
                    <dd class="col-sm-9">@Model.ElementId</dd>
                </dl>

                <div class="mt-3">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-sm">수정</a>
                    <a asp-action="Index" class="btn btn-secondary btn-sm">목록으로</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- 몬스터 능력치 테이블 -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">능력치</h5>
        <a asp-action="StatCreate" asp-route-monsterId="@Model.Id" class="btn btn-success btn-sm">
            <i class="bi bi-plus-lg"></i> 스탯 추가
        </a> 
        <a asp-action="StatsBulk" asp-route-monsterId="@Model.Id" class="btn btn-success btn-sm">
            <i class="bi bi-plus-lg"></i> 스탯 벌크 
        </a>
    </div>

    <div class="card-body table-responsive">
        @if (Model.Stats != null && Model.Stats.Any())
        {
            <table class="table table-striped table-hover align-middle">
                <thead>
                    <tr>
                        <th>단계</th>
                        <th>HP</th>
                        <th>ATK</th>
                        <th>DEF</th>
                        <th>SPD</th>
                        <th>치명타율</th>
                        <th>치명타피해</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var s in Model.Stats)
                    {
                        <tr>
                            <td>@s.Level</td>
                            <td>@s.HP</td>
                            <td>@s.ATK</td>
                            <td>@s.DEF</td>
                            <td>@s.SPD</td>
                            <td>@s.CritRate%</td>
                            <td>@s.CritDamage%</td>
                            <td>
                                <a asp-action="StatEdit"
                                   asp-route-monsterId="@Model.Id"
                                   asp-route-level="@s.Level"
                                   class="btn btn-sm btn-primary">수정</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="text-muted">등록된 스탯이 없습니다.</div>
        }
    </div>
</div>