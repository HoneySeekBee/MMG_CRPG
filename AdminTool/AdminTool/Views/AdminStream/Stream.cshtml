@model List<AdminStreamEntryVm>

@{
    ViewData["Title"] = $"Stream 로그: {ViewBag.StreamName}";
    var stream = (string)ViewBag.StreamName;
}

<h2 class="mt-3 mb-2">Redis Stream 로그</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h5 class="text-muted">@stream</h5>

    <form method="get" class="d-flex">
        <input type="hidden" name="stream" value="@stream" />
        <input type="number" name="count" value="50" class="form-control form-control-sm me-2" />
        <button type="submit" class="btn btn-primary btn-sm">조회</button>
    </form>
</div>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>Entry ID</th>
            <th>Fields</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="2" class="text-center text-muted py-4">
                    기록이 없습니다.
                </td>
            </tr>
        }
        else
        {
            foreach (var entry in Model)
            {
                <tr>
                    <td>@entry.Id</td>
                    <td>
                        <ul class="mb-0">
                            @foreach (var field in entry.Fields)
                            {
                                <li><strong>@field.Key:</strong> @field.Value</li>
                            }
                        </ul>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>