@{
    var ctrl = (string)ViewContext.RouteData.Values["controller"];
    var act = (string)ViewContext.RouteData.Values["action"];
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        /* 최소 스타일 */
        .layout {
            display: grid;
            grid-template-columns: 260px 1fr;
            min-height: 100vh;
        }

        .sidebar {
            background: #0f172a;
            color: #cbd5e1;
            padding: 16px 12px;
        }

            .sidebar .section {
                font-size: 12px;
                letter-spacing: .08em;
                text-transform: uppercase;
                opacity: .7;
                margin: 18px 8px 8px;
            }

            .sidebar a {
                display: block;
                color: #cbd5e1;
                padding: 8px 10px;
                border-radius: 8px;
                text-decoration: none;
            }

                .sidebar a:hover {
                    background: #1e293b;
                }

                .sidebar a.active {
                    background: #334155;
                    color: #fff;
                    font-weight: 600;
                }

        .content {
            padding: 24px;
        }
    </style>
</head>
<body>
    <div class="layout">
        <aside class="sidebar">
            @await Html.PartialAsync("_Sidebar", (ctrl, act))
        </aside>
        <main class="content">
            @RenderBody()
        </main>
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>